<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="194dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#B2AC88"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="291dp">

                <TextView
                    android:id="@+id/todoTitleTV"
                    android:layout_width="308dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/spectral_bold"
                    android:padding="10dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:text="title"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="390dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/amiri"
                    android:text="description"
                    app:layout_constraintEnd_toEndOf="@+id/todoTitleTV"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/todoTitleTV"
                    app:layout_constraintTop_toBottomOf="@+id/dueDate" />

                <TextView
                    android:id="@+id/dueDate"
                    android:layout_width="343dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/advent_pro_thin"
                    android:text="duedate"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="@+id/todoTitleTV"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/todoTitleTV"
                    app:layout_constraintTop_toBottomOf="@+id/todoTitleTV" />

                <ImageView
                    android:id="@+id/Edit"
                    android:layout_width="26dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/Delete"
                    app:layout_constraintStart_toEndOf="@+id/Delete"
                    app:layout_constraintTop_toTopOf="@+id/Delete"
                    app:srcCompat="@drawable/baseline_create_24" />

                <ImageView
                    android:id="@+id/Delete"
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/todoTitleTV"
                    app:layout_constraintStart_toEndOf="@+id/todoTitleTV"
                    app:layout_constraintTop_toTopOf="@+id/todoTitleTV"
                    app:srcCompat="@drawable/baseline_delete_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>