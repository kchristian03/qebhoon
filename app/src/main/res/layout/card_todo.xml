<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="413dp"
            android:layout_height="259dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#8f9779"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/todoTitleTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/spectral_bold"
                        android:padding="10dp"
                        android:paddingStart="0dp"
                        android:paddingTop="0dp"
                        android:text="title"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="342dp"
                        android:layout_height="21dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/spectral_bold"
                        android:text="description"
                        app:layout_constraintEnd_toEndOf="@+id/todoTitleTV"
                        app:layout_constraintStart_toStartOf="@+id/todoTitleTV"
                        app:layout_constraintTop_toBottomOf="@+id/todoTitleTV" />

                    <TextView
                        android:id="@+id/dueDate"
                        android:layout_width="343dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/spectral_bold"
                        android:text="duedate"
                        android:textAlignment="viewStart"
                        app:layout_constraintEnd_toEndOf="@+id/todoTitleTV"
                        app:layout_constraintStart_toStartOf="@+id/todoTitleTV"
                        app:layout_constraintTop_toBottomOf="@+id/description" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="#568203"
                        android:fontFamily="@font/spectral_bold"
                        android:text="Save"
                        android:textColorHighlight="#3EB489"
                        android:textColorLink="#3EB489"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/dueDate"
                        app:layout_constraintStart_toStartOf="@+id/dueDate"
                        app:layout_constraintTop_toBottomOf="@+id/dueDate" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>