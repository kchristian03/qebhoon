<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="414dp"
            android:layout_height="207dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#B2AC88"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="221dp">

                <TextView
                    android:id="@+id/todoTitleTV"
                    android:layout_width="258dp"
                    android:layout_height="41dp"
                    android:layout_margin="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/spectral_bold"
                    android:padding="10dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:text="title"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/todoDescriptionTV"
                    android:layout_width="369dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/spectral_bold"
                    android:text="description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView3"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/todoDueDateTV"
                    app:layout_constraintTop_toBottomOf="@+id/todoDueDateTV" />

                <TextView
                    android:id="@+id/todoDueDateTV"
                    android:layout_width="343dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/spectral_bold"
                    android:text="duedate"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="@+id/todoTitleTV"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/todoTitleTV"
                    app:layout_constraintTop_toBottomOf="@+id/todoTitleTV" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/todoTitleTV"
                    app:layout_constraintTop_toTopOf="@+id/todoTitleTV"
                    app:srcCompat="@drawable/baseline_delete_24" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/baseline_create_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>